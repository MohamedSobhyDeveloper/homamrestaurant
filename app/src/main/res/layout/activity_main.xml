<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_corner_halforange"
    tools:context=".view.start.MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logosplash"
        android:scaleType="centerInside"
        />
   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btn_store"
       android:elevation="15dp"
       android:background="@drawable/drawable_corner_halfgray"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:text="@string/restaurant"
       android:textAllCaps="false"
       android:textColor="@color/white"
       android:textSize="17sp"
       android:fontFamily="@font/robotobold"
       android:layout_marginStart="55dp"
       android:layout_marginEnd="55dp"
       />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_driver"
        android:background="@drawable/drawable_corner_halforange"
        app:layout_constraintTop_toBottomOf="@+id/btn_store"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/driver"
        android:elevation="15dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="@font/robotobold"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>